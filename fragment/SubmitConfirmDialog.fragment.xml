<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		class="mainDialog">
		<customHeader>
			<Bar>
				<contentMiddle><Title text="Confirmation"></Title></contentMiddle>
				<contentRight><core:Icon src="sap-icon://decline" press=".closeDialog" class="closeDialog"/></contentRight>
			</Bar>
		</customHeader>
		<buttons>
			<Button text="Ok" press="handleSubmitConfirmSave">
			</Button>
			<Button text="Cancel" press="handleClose">				
			</Button>
		</buttons>
		<content>
			<VBox width="100%" alignItems="Stretch" class="dialogFilterBox">
				<Label  id="actionInfo" text="" visible="false" class="dialogTextImportant"/> 
				<Label  id="dialogMsg" text="" visible="true" class="dialogTextImportant"/> 
				<Label  id="dialogMsg1" text="" visible="true" class="dialogTextImportant"/> 
				<Label  id="dialogMsg2" text="" visible="true" class="dialogTextImportant"/> 
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>