							</headerToolbar>
							<columns>
								<Column id="catId"
									width="60%">
									<Text text="{i18n>Category}" class="header category-header"/>
								</Column>
								<Column id="catPpvLc"
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
									<Text text="{i18n>PPV}" />
								</Column>
								<Column id="catCurrLc"
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
									<Text text="{i18n>Currency}" />
								</Column>
								<Column id="catPpvGrp"
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
									<Text text="{i18n>PPV}" />
								</Column>
								<Column id="catCurrGrp"
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
									<Text text="{i18n>Currency}" />
								</Column>
								
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier
												text="{Blart}" class="statusStylePPV"/>
										<Text text="{AmtLc}" />
										<Text text="{CurrLc}" />
										<Text text="{AmtGrp}" /> 
										<Text text="{CurrGrp}" /> 
									</cells>
								</ColumnListItem>
							</items>
							<layoutData><l:SplitterLayoutData size="48%" resizable="false"/></layoutData>
						</Table>
						<Table id="ppvFavorable"
							inset="false"
							items="{
								path: '/d/results/0/NavSelToFav/results/'
